<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ValorPatrimonio">

    <RadioGroup
        android:id="@+id/radioGroupValorPat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.100000024">

        <RadioButton
            android:id="@+id/radioValorPatA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Até R$ 10.000 " />

        <RadioButton
            android:id="@+id/radioValorPatB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="De R$ 10.001 até R$ 100.000 " />

        <RadioButton
            android:id="@+id/radioValorPatC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="De R$ 100.001 até R$ 500.000" />

        <RadioButton
            android:id="@+id/radioValorPatD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="De R$ 500.001 até R$ 1.000.000" />

        <RadioButton
            android:id="@+id/radioValorPatE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acima de R$ 1.000.001" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:lines="2"
        android:maxLines="2"
        android:text="Qual o valor aproximado do seu patrimônio?"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19999999" />

    <Button
        android:id="@+id/btnNextValorPat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1976D2"
        android:text="Next"
        android:textColor="#F5FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupValorPat" />

</androidx.constraintlayout.widget.ConstraintLayout>